package main

import (
	"fmt"
	"io/ioutil"
	"os"

	"./mylogger"
)

// read file poem.txt to string
func readPoem(fileName string) string {
	// read file
	file, err := os.Open(fileName)
	if err != nil {
		fmt.Println("open file error")
		return ""
	}
	defer file.Close()

	// read file to string
	content, err := ioutil.ReadAll(file)
	if err != nil {
		fmt.Println("read file error")
		return ""
	}
	return string(content)
}

// write string to file poem_copy.txt
func writePoem(content string, fileName string) {
	// write file
	file, err := os.Create(fileName)
	if err != nil {
		fmt.Println("create file error")
		return
	}
	defer file.Close()

	// write string to file
	file.WriteString(content)
}

func main() {
	content := readPoem("poem.txt")
	writePoem(content, "poem_copy.txt")
	logger, err = mylogger.NewLogger("log.txt")
	if err != nil {
		fmt.Println("create logger error")
		return
	}
	defer logger.Close()
	logger.Info("read and write poem.txt")

}
